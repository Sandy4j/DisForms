<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="DisClient.MainWindow" Title="Disclite" Height="600" Width="1000" Background="{DynamicResource WindowBackgroundBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!-- LEFT SIDEBAR -->
        <Border x:Name="LeftSidebarBorder" Background="{DynamicResource SidebarBackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,1,0" Grid.Column="0">
            <StackPanel Margin="0">
                <Button x:Name="ThemeToggleButton" Content="🌙" HorizontalAlignment="Right" Margin="5" Width="30" Height="30" Background="Transparent" BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}" FontSize="16" Click="ThemeToggleButton_Click"/>
                <TextBlock x:Name="OnlineUsersLabel" Text="Online Users" Foreground="{DynamicResource UsernameBrush}" Margin="10" FontWeight="Bold"/>
                <ListBox x:Name="OnlineUsersListBox" Background="{DynamicResource OnlineBarBrush}" BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}" Foreground="{DynamicResource UsernameBrush}" Margin="5" av:ItemsSource="{av:SampleData ItemCount=5}" SelectionChanged="OnlineUsersListBox_SelectionChanged"/>
            </StackPanel>
        </Border>
        <!-- MIDDLE CHAT -->
        <Border x:Name="ChatBorder" Background="{DynamicResource WindowBackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0" Grid.Column="1">
            <DockPanel>
                <!-- Top Bar -->
                <Border x:Name="TopBarBorder" Background="{DynamicResource SidebarBackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1" DockPanel.Dock="Top" Height="40">
                    <TextBlock x:Name="ChatTitleLabel" Text="General Chat" Foreground="{DynamicResource UsernameBrush}" VerticalAlignment="Center" Margin="10" FontWeight="Bold"/>
                </Border>
                <!-- Typing indicator -->
                <TextBlock x:Name="TypingIndicator" Text="" Foreground="{DynamicResource PlaceholderBrush}" FontStyle="Italic" Margin="10,0,0,5" VerticalAlignment="Bottom" DockPanel.Dock="Bottom" Visibility="Collapsed"/>
                <!-- Bottom Input Area -->
                <Border x:Name="InputAreaBorder" DockPanel.Dock="Bottom" Margin="5" Background="{DynamicResource WindowBackgroundBrush}" Height="40" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0">
                    <DockPanel LastChildFill="True">
                        <Button x:Name="SendButton" Click="SendButton_Click" Width="40" Margin="5,0,0,0" DockPanel.Dock="Right" Background="#7289DA" Foreground="White" FontSize="16" BorderBrush="#7289DA" BorderThickness="1" Content="➤"/>
                        <!-- TextBox with Placeholder overlay handled by DataTrigger -->
                        <Grid>
                            <TextBox x:Name="MessageTextBox" Background="{DynamicResource ChatBrush}" Foreground="{DynamicResource UsernameBrush}" VerticalContentAlignment="Center" BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}" Padding="10,0" FontSize="14" KeyDown="MessageTextBox_KeyDown" TextChanged="MessageTextBox_TextChanged" SelectionTextBrush="{DynamicResource MessageBrush}"/>
                            <TextBlock x:Name="PlaceholderText" Text="Type a message..." Foreground="{DynamicResource PlaceholderBrush}" FontSize="14" Margin="12,0,0,0" VerticalAlignment="Center" IsHitTestVisible="False">
                                <TextBlock.Style>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text.Length, ElementName=MessageTextBox}" Value="0">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style></TextBlock>
                        </Grid>
                    </DockPanel>
                </Border>
                <!-- Chat Messages -->
                <Border x:Name="ChatMessagesBorder" Background="{DynamicResource WindowBackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Margin="5">
                    <ScrollViewer x:Name="ChatScrollViewer" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="ChatPanel" ItemsSource="{Binding Messages}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="8,10,8,0">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Username}" FontWeight="Bold" Foreground="{DynamicResource UsernameBrush}" FontSize="14"/>
                                            <TextBlock Text="{Binding Timestamp}" Margin="8,0,0,0" FontSize="12" Foreground="{DynamicResource TimestampBrush}"/>
                                        </StackPanel>
                                        <TextBlock Text="{Binding Text}" TextWrapping="Wrap" FontSize="14" Foreground="{DynamicResource MessageBrush}" Margin="0,2,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>
            </DockPanel>
        </Border>
    </Grid>
</Window>