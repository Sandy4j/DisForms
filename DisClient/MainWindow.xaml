<Window x:Class="DisClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Disclite" Height="600" Width="1000"
        Background="#2C2F33">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT SIDEBAR -->
        <StackPanel Background="#23272A" Grid.Column="0" Margin="0">
            <TextBlock Text="Online Users" Foreground="White" Margin="10" FontWeight="Bold"/>
            <ListBox Name="OnlineUsersListBox" 
                     Background="#2C2F33" 
                     BorderThickness="0"
                     Foreground="White">
                <!-- Users will be added dynamically -->
            </ListBox>
        </StackPanel>

        <!-- MIDDLE CHAT -->
        <DockPanel Background="#2C2F33" Grid.Column="1">

            <!-- Top Bar with Client Name -->
            <Border Background="#23272A" DockPanel.Dock="Top" Height="40">
                <TextBlock Text="General Chat"
                           Foreground="White"
                           VerticalAlignment="Center"
                           Margin="10"
                           FontWeight="Bold"/>
            </Border>

            <!-- Bottom Input Area with Placeholder and Send Button -->
            <Border DockPanel.Dock="Bottom" Margin="5" Background="#2C2F33" Height="40">
                <DockPanel LastChildFill="True">

                    <!-- Send Button -->
                    <Button Width="40"
                            Margin="5,0,0,0"
                            DockPanel.Dock="Right"
                            Background="#7289DA"
                            Foreground="White"
                            FontSize="16"
                            Click="SendButton_Click">
                        ➤
                    </Button>

                    <!-- TextBox with Placeholder Overlay -->
                    <Grid>
                        <!-- Actual TextBox -->
                        <TextBox Name="MessageTextBox"
                                 Background="#40444B"
                                 Foreground="White"
                                 VerticalContentAlignment="Center"
                                 BorderThickness="0"
                                 Padding="10,0"
                                 FontSize="14"
                                 TextChanged="MessageTextBox_TextChanged"/>

                        <!-- Placeholder Text -->
                        <TextBlock Name="PlaceholderText"
                                   Text="Type a message..."
                                   Foreground="White"
                                   Opacity="0.4"
                                   FontSize="14"
                                   Margin="12,0,0,0"
                                   VerticalAlignment="Center"
                                   IsHitTestVisible="False"
                                   Visibility="Visible"/>
                    </Grid>
                </DockPanel>
            </Border>

            <!-- Chat Messages -->
            <ScrollViewer Name="ChatScrollViewer" 
                         VerticalScrollBarVisibility="Auto" 
                         DockPanel.Dock="Top">
                <StackPanel Name="ChatPanel">
                    <!-- Messages will be added here dynamically -->
                </StackPanel>
            </ScrollViewer>
        </DockPanel>
    </Grid>
</Window>