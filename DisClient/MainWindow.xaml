<Window x:Class="DisClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Disclite" Height="600" Width="1000"
        Background="#FFFFFF">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT SIDEBAR -->
        <Border Name="LeftSidebarBorder"
                Background="#F6F6F6"
                BorderBrush="#E0E0E0"
                BorderThickness="0,0,1,0"
                Grid.Column="0">
            <StackPanel Margin="0">
                <!-- Theme Toggle Button -->
                <Button Name="ThemeToggleButton"
                        Content="🌙"
                        HorizontalAlignment="Right"
                        Margin="5"
                        Width="30"
                        Height="30"
                        Background="Transparent"
                        BorderThickness="1"
                        BorderBrush="#E0E0E0"
                        FontSize="16"/>
                
                <TextBlock Name="OnlineUsersLabel" 
                           Text="Online Users" 
                           Foreground="#2C2F33" 
                           Margin="10" 
                           FontWeight="Bold"/>
                <ListBox Name="OnlineUsersListBox"
                         Background="#FFFFFF"
                         BorderThickness="1"
                         BorderBrush="#E0E0E0"
                         Foreground="#2C2F33"
                         Margin="5">
                    <!-- Users will be added dynamically -->
                </ListBox>
            </StackPanel>
        </Border>

        <!-- MIDDLE CHAT -->
        <Border Name="ChatBorder"
                Background="#FFFFFF"
                BorderBrush="#E0E0E0"
                BorderThickness="0,0,0,0"
                Grid.Column="1">
            <DockPanel>

                <!-- Top Bar with Client Name -->
                <Border Name="TopBarBorder"
                        Background="#F6F6F6"
                        BorderBrush="#E0E0E0"
                        BorderThickness="0,0,0,1"
                        DockPanel.Dock="Top"
                        Height="40">
                    <TextBlock Name="ChatTitleLabel"
                               Text="General Chat"
                               Foreground="#2C2F33"
                               VerticalAlignment="Center"
                               Margin="10"
                               FontWeight="Bold"/>
                </Border>

                <!-- Bottom Input Area with Placeholder and Send Button -->
                <Border Name="InputAreaBorder"
                        DockPanel.Dock="Bottom"
                        Margin="5"
                        Background="#FFFFFF"
                        Height="40"
                        BorderBrush="#E0E0E0"
                        BorderThickness="0,1,0,0">
                    <DockPanel LastChildFill="True">

                        <!-- Send Button -->
                        <Button x:Name="SendButton"
                                Width="40"
                                Margin="5,0,0,0"
                                DockPanel.Dock="Right"
                                Background="#7289DA"
                                Foreground="White"
                                FontSize="16"
                                BorderBrush="#7289DA"
                                BorderThickness="1">
                            ➤
                        </Button>

                        <!-- TextBox with Placeholder Overlay -->
                        <Grid>
                            <!-- Actual TextBox -->
                            <TextBox Name="MessageTextBox"
                                     Background="#F6F6F6"
                                     Foreground="#2C2F33"
                                     VerticalContentAlignment="Center"
                                     BorderThickness="1"
                                     BorderBrush="#E0E0E0"
                                     Padding="10,0"
                                     FontSize="14"/>

                            <!-- Placeholder Text -->
                            <TextBlock Name="PlaceholderText"
                                       Text="Type a message..."
                                       Foreground="#8A8A8A"
                                       Opacity="1"
                                       FontSize="14"
                                       Margin="12,0,0,0"
                                       VerticalAlignment="Center"
                                       IsHitTestVisible="False"
                                       Visibility="Visible"/>
                        </Grid>
                    </DockPanel>
                </Border>

                <!-- Chat Messages -->
                <Border Name="ChatMessagesBorder"
                        Background="#FFFFFF"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        Margin="5">
                    <ScrollViewer Name="ChatScrollViewer"
                                 VerticalScrollBarVisibility="Auto">
                        <StackPanel Name="ChatPanel">
                            <!-- Messages will be added dynamically -->
                        </StackPanel>
                    </ScrollViewer>
                </Border>

            </DockPanel>
        </Border>
    </Grid>
</Window>
